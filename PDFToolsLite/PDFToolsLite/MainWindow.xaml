<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="PDFToolsLite.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PDFToolsLite"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:PDFToolsLite.Views"
    mc:Ignorable="d"
    Title="PDF Tools Lite">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TitleBar x:Name="AppTitleBar" Title="PDF Tools Lite" BackRequested="AppTitleBar_BackRequested" />
        <Grid x:Name="ContentGrid" RowDefinitions="Auto,*" Grid.Row="1">
            <CommandBar DefaultLabelPosition="Right">
                <AppBarButton Icon="Add" Label="Add PDFs" Click="AddPdfs_Click"/>
                <AppBarSeparator/>
                <AppBarButton Icon="Accept" Label="Merge" Click="Merge_Click"/>
                <AppBarButton Icon="Crop" Label="Split/Extract" Click="SplitExtract_Click"/>
                <AppBarButton Icon="Delete" Label="Delete Pages" Click="DeletePages_Click"/>
                <AppBarButton Icon="Rotate" Label="Rotate" Click="Rotate_Click"/>
                <AppBarSeparator/>
                <AppBarButton Icon="Pictures" Label="Images → PDF" Click="ImagesToPdf_Click"/>
                <AppBarButton Icon="Camera" Label="PDF → PNG" Click="PdfToPng_Click"/>
                <AppBarButton Label="About" Click="About_Click">
                    <AppBarButton.Icon>
                        <FontIcon Glyph="&#xE946;" />
                    </AppBarButton.Icon>
                </AppBarButton>
            </CommandBar>

            <Grid Grid.Row="1" ColumnDefinitions="2*,*">
                <ListView x:Name="FilesList"
                      ItemsSource="{x:Bind Files, Mode=OneWay}"
                      SelectionMode="Single"
                      Margin="12">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="local:FileItem">
                            <StackPanel Orientation="Horizontal" Spacing="8" Padding="4">
                                <TextBlock Text="{x:Bind FileName}" FontWeight="SemiBold"/>
                                <TextBlock Text="{x:Bind PageCount}" Foreground="Gray" Margin="6,0,0,0"/>
                                <TextBlock Text=" pages" Foreground="Gray"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <StackPanel Grid.Column="1" Spacing="10" Padding="12">
                    <TextBlock Text="Operation Settings" FontSize="18" FontWeight="Bold"/>

                    <TextBox x:Name="PageRangeBox"
                         Header="Page range (e.g. 1-3,5,7-9). Used by Split/Extract, Delete, Rotate."
                         PlaceholderText="1-3,5,7-9"/>

                    <ComboBox x:Name="RotateAngleBox" Header="Rotate angle">
                        <ComboBoxItem Content="90"/>
                        <ComboBoxItem Content="180"/>
                        <ComboBoxItem Content="270"/>
                    </ComboBox>

                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Button Content="Move Up" Click="MoveUp_Click"/>
                        <Button Content="Move Down" Click="MoveDown_Click"/>
                        <Button Content="Clear List" Click="ClearList_Click"/>
                    </StackPanel>

                    <ProgressBar x:Name="Progress" Minimum="0" Maximum="100" Height="6"/>
                    <TextBlock x:Name="StatusText" Foreground="Gray" TextWrapping="WrapWholeWords"/>
                </StackPanel>
            </Grid>
        </Grid>
        <views:AboutPage x:Name="AppAboutPage" Visibility="Collapsed" Grid.Row="1" />
    </Grid>
</Window>
